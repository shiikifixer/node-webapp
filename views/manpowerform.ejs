	<script>
	$(document).ready(function(){
		$("#manpowerform").validate({
			rules:{
				"frontend[]": {required: true},
				cloud_platform: {required: true},
				"backend[]": {required: true},
				"database[]": {required: true}
			},
			messages:{
				"frontend[]": {required: "Please select at least 1 checkbox"},
				cloud_platform: {required: "Please select a cloud platform"},
				"backend[]": {required: "Please select at least 1 checkbox"},
				"database[]": {required: "Please select at least 1 checkbox"}
			},
			errorPlacement:function(error,element){
				if(element.attr("name")=="frontend[]"){
					error.insertAfter("#frontend_error");
				}else if(element.attr("name")=="cloud_platform"){
					error.insertAfter("#cloud_error");
				}else if(element.attr("name")=="backend[]"){
					error.insertAfter("#backend_error")
				}else if(element.attr("name")=="database[]"){
					error.insertAfter("#database_error");
				}else if(element.attr("name")=="os_requirements"){
					error.insertAfter("#os_error")
				}else{
					error.insertAfter(element);
				}
			}
		});
	});
